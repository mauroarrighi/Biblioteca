@model Usuario

<h1>ALERTA!!!</h1>
<H2>TEM CERTEZA QUE DESEJA EXCLUIR O USUÁRIO @Model.Nome (@Model.login)?</H2>
<p>A exclusão é irreverssível</p>

<form action="ExcluirUsuario" method="post">
    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>